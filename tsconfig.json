{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es7",
      "dom"
    ],

    "jsx": "react",

    "outDir": "dist",
    "rootDir": ".",

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,

    "sourceMap": true,
    "sourceRoot": "src"
  }
}